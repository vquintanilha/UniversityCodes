@{
    ViewData["Title"] = "Home Page";
}

@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager

<div>
    <h1>Connect4</h1>
</div>
@if (SignInManager.IsSignedIn(User))
{
    <a asp-area=""
       asp-controller="Jogo"
       asp-action="CriarJogo" class="btn btn-default">Jogar Amistoso</a>

    <a asp-area=""
       asp-controller="Jogo"
       asp-action="ContinuarJogo" class="btn btn-default">Continuar Jogo</a>
}
